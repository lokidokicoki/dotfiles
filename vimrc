" based on https://tuckerchapman.com/2020/05/09/vimrc_organization
source $HOME/.vim/init/loader.vimrc		" load plugins
source $HOME/.vim/init/general.vimrc	" general settings
source $HOME/.vim/init/leader.vimrc		" leader key settings
source $HOME/.vim/init/functions.vimrc	" function defintions
source $HOME/.vim/init/plugins.vimrc	" plugin-specific settings
